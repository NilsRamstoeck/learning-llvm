{
  "name": "learning-llvm",
  "version": "1.0.0",
  "description": "learning to parse code and compile to llvm ir",
  "type": "module",
  "scripts": {
    "dev": "nodemon dist/test/run.test.js --watch test/test.tsn --watch dist",
    "dev:clang": "nodemon -L --exec \"npm run clang && ./dist/ts-native && lli dist/out.ll\" --watch src/compiler/TSNative.h --watch src/compiler/ts-native.cpp",
    "clang": "clang++ -o dist/ts-native `llvm-config --cxxflags --ldflags --system-libs --libs core` src/compiler/ts-native.cpp",
    "tsc:watch": "tsc -w",
    "tsc:watch:test": "tsc -w -p test.tsconfig.json"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "nodemon": "^2.0.22",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.2.1"
  }
}
